@model SubWrapped
           
<div class="sub">
    <div class="sub-subunsub">
        <a onclick="javascript:skimurui.subs.toggleSubscription(this, '@Model.Sub.Name');" class="btn btn-default btn-sub @(Model.IsSubscribed ? "subscribed" : "unsubscribed")">
            <span class="sub"><span class="icon"></span> Subscribe</span>
            <span class="subbed">Subscribed</span>
            <span class="unsub">Unsubscribe</span>
        </a>
    </div>
    <div class="sub-body">
        <div>
            <p class="sub-title">
                <a class="sub-link" href="@Url.Sub(Model.Sub.Name)">@Model.Sub.Name</a>
            </p>
            <p class="sub-description">
                @Model.Sub.Description
            </p>
            <p class="sub-meta">
                @Model.NumberOfSubscribers subscribers, a community for @Html.Age(Model.Sub.CreatedDate).
            </p>
            <p class="sub-links">

            </p>
        </div>
    </div>
</div>