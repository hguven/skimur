@model UserViewModel
@{
    var navigationKey = ViewBag.NavigationKey;
}
<div class="header-nav">
    <div class="hidden-xs">
        <ul class="nav nav-tabs">
            <li class="@(navigationKey == "overview" ? "active" : null)"><a href="@Url.User(Model.User.UserName)">Overview</a></li>
            <li class="@(navigationKey == "posts" ? "active" : null)"><a href="@Url.UserPosts(Model.User.UserName)">Posts</a></li>
            <li class="@(navigationKey == "comments" ? "active" : null)"><a href="@Url.UserComments(Model.User.UserName)">Comments</a></li>
        </ul>
    </div>
    <div class="visible-xs-block">
        <ul class="nav nav-tabs">
            <li class="dropdown active">
                <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);">
                    @Title(navigationKey) <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li class="@(navigationKey == "overview" ? "active" : null)"><a href="@Url.User(Model.User.UserName)">Overview</a></li>
                    <li class="@(navigationKey == "posts" ? "active" : null)"><a href="@Url.UserPosts(Model.User.UserName)">Posts</a></li>
                    <li class="@(navigationKey == "comments" ? "active" : null)"><a href="@Url.UserComments(Model.User.UserName)">Comments</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>

@helper Title(string navigationKey)
{
    if (!string.IsNullOrEmpty(navigationKey))
    {
        if (navigationKey == "overview")
        {
            @("Overview")
        }
        else if (navigationKey == "posts")
        {
            @("Posts")
        }
        else if (navigationKey == "comments")
        {
            @("Comments")
        }
    }
}