@model ComposeMessageViewModel


@{
    ViewBag.Title = "Send a message";
}

<div class="row">
    <div class="col-sm-12">
        <h2 class="page-header">Send a message</h2>
        @using (Html.BeginForm(null, null, FormMethod.Post, new {action = Url.Compose()}))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.LabelFor(x => x.To, new {@class = "control-label"})
                @Html.TextBoxFor(x => x.To, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Subject, new {@class = "control-label"})
                @Html.TextBoxFor(x => x.Subject, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Message, new {@class = "control-label"})
                @Html.TextAreaFor(x => x.Message, new {@class = "form-control"})
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Send"/>
            </div>
        }
    </div>
</div>

@section header {
    @Html.Partial("_HeaderNav", Model.IsModerator)
}