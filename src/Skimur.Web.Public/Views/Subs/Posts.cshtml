@using Subs
@using Subs.ReadModel
@model SubPosts
@{
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section header {
    @{
        var urlBase = Model.Sub != null ? Url.Content("~/s/" + Model.Sub.Name) : Url.Content("/");
    }

    <div class="sub-header">
        <div class="hidden-xs">
            <ul class="nav nav-tabs sort">
                <li class="@(Model.SortBy == PostsSortBy.Hot ? "active" : null)"><a href="@(urlBase)">Hot</a></li>
                <li class="@(Model.SortBy == PostsSortBy.New ? "active" : null)"><a href="@(urlBase)/new">New</a></li>
                <li class="@(Model.SortBy == PostsSortBy.Controversial ? "active" : null)"><a href="@(urlBase)/controversial">Controversial</a></li>
                <li class="@(Model.SortBy == PostsSortBy.Top ? "active" : null)"><a href="@(urlBase)/top">Top</a></li>
            </ul>
        </div>
        <div class="visible-xs-block">
            <ul class="nav nav-tabs sort">
                <li class="dropdown active">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);">@Model.SortBy.ToString() <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="@(Model.SortBy == PostsSortBy.Hot ? "active" : null)"><a href="@(urlBase)">Hot</a></li>
                        <li class="@(Model.SortBy == PostsSortBy.New ? "active" : null)"><a href="@(urlBase)/new">New</a></li>
                        <li class="@(Model.SortBy == PostsSortBy.Controversial ? "active" : null)"><a href="@(urlBase)/controversial">Controversial</a></li>
                        <li class="@(Model.SortBy == PostsSortBy.Top ? "active" : null)"><a href="@(urlBase)/top">Top</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>

}

<div class="row">
    <div class="col-lg-9 col-sm-8">
        @foreach (var post in Model.Posts)
        {
            @Html.Partial("_Post", post)
        }
    </div>
    <div class="col-lg-3 col-sm-4">

        <div class="panel">
            <a href="@Url.CreatePost()" class="btn btn-primary btn-block">Submit a new link</a>
            <a href="@Url.CreatePost()" class="btn btn-primary btn-block">Submit a new post</a>
        </div>

        @if (Model.Sub != null)
        {
            @Html.Action("ModerationSideBar", new { subName = Model.Sub.Name })
        }

    </div>
</div>